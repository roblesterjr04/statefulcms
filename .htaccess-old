RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !#
RewriteCond %{REQUEST_URI} !(.*)/$

RewriteRule ^page/([^/]+)/([^/]+)/([^/]+)/([^/]+)/([^/]+)/?$ page.php?mod=$1&$2=$3&$4=$5 [L,QSA]
RewriteRule ^page/([^/]+)/([^/]+)/([^/]+)/?$ page.php?mod=$1&$2=$3 [L,QSA]
RewriteRule ^page/([^/\.]+)/?$ page.php?mod=$1 [L,QSA]
RewriteRule ^api/([^/]+)/([^/]+)/([^/]+)/([^/]+)/([^/]+)/?$ api.php?mod=$1&$2=$3&$4=$5 [L,QSA]
RewriteRule ^api/([^/]+)/([^/]+)/([^/]+)/?$ api.php?mod=$1&$2=$3 [L,QSA]
RewriteRule ^api/([^/\.]+)/?$ api.php?mod=$1 [L,QSA]
RewriteRule ^([^/\.]+)/?$ $1.php [L,QSA]

